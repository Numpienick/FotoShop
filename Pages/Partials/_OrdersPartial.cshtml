@model List<FotoShop.Classes.Order>
<div class="container">
    @if (Model.Count > 0)
    {
        <div class="display-4 text-center pb-5">
            Uw bestellingen
        </div>
        <div id="alert"></div>
        <table class="table table-hover table-responsive-md mb-3">
            <thead>
                <tr>
                    <th scope="col">Bestelling ID</th>
                    <th scope="col">Bestelling geplaatst op</th>
                    <th scope="col">Bestelling betaald op</th>
                    <th scope="col">Download</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <th scope="row">@order.Placed_order_id</th>
                        <td>@order.Date_order_placed</td>
                        @{
                            string datePaid = order.Date_order_paid;
                            if (string.IsNullOrEmpty(datePaid))
                            {
                                datePaid = "Onbetaald";
                            }
                        }
                        <td>@datePaid</td>
                        <td><a href="@order.Download_link">Download</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="display-4 text-center pb-5">
            U heeft nog geen bestellingen
        </div>
        <h4 class="text-center">
            Bestel nu gauw een foto in de
            <a class="" asp-page="Shop">shop</a>
        </h4>
    }
</div>