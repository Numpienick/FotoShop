@page
@using FotoShop.Classes
@model FotoShop.Pages.ShoppingCart

@{
    Layout = "_Layout";
}

@section Styles {
    <link href="~/css/cart.css" rel="stylesheet"/>
}

<div class="container mt-3" @Model.Hidden>
    <div class="alert alert-success" role="alert">
        <strong>Gelukt</strong> Uw order is geplaatst en betaald!
    </div>
</div>

<body>
<div class="container">
    <div class="col Main_col">
        <div class="row Photo_display">
            <div class="row border-dark border-top-0 border-right-0 border-left-0 Item">
                @foreach (var item in @Model.GetPhoto())
                {
                    <div class="col Item_img">
                        <img class="img" src="/Images/ProductImages/@item.Photo_path"/>
                    </div>
                    <div class="col Item_info">
                        <div class="row Item_title">
                            <span>@item.Title</span>
                        </div>
                        <div class="row Item_price">
                            <span>€@item.Price</span>
                        </div>
                        <div class="row Item_button">
                            <form method="post">
                                <input type="hidden" asp-for="ImgId" value="@item.Photo_id"/>
                                <button class="btn btn-outline-danger my-3" asp-page-handler="Delete" type="submit">
                                    <img class="mr-2" src="~/images/delete_black_24dp.svg"/>Verwijder deze foto
                                </button>
                            </form>
                        </div>
                    </div>
                }
                <span class="text-danger ShoppingLeeg">Let op uw winkelwagen is momenteel leeg! Bekijk nu ons aanbod in de <a href="./Shop">Shop</a> </span>
            </div>
        </div>
        <div class="col Item_payment">
            <div class="row Price_sum">
                <span class="Subtot">Subtotaal: €@Model.TotalPrice()</span>
            </div>
            <form method="post">
                <button class="Afrekenen" asp-page-handler="OrderSucces" class="btn-primary Pay_button">Afrekenen</button>
            </form>
        </div>
    </div>

</div>
</body>